{
    "info": {
        "name": "Project Hub API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@mail.com\",\n  \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var json = pm.response.json();",
                                    "    pm.environment.set('user_id', json.user.id);",
                                    "    pm.environment.set('username', json.user.username);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Me",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "me"
                            ]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "logout"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Projects",
            "item": [
                {
                    "name": "Create Project",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    var json = pm.response.json();",
                                    "    pm.environment.set('project_id', json.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Mi Proyecto\",\n  \"description\": \"Descripción del proyecto\",\n  \"is_public\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/projects",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "projects"
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Projects",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/projects",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "projects"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Public Projects",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/projects/public",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "projects",
                                "public"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Project by ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/projects/{{project_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "projects",
                                "{{project_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Project",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Proyecto Actualizado\",\n  \"description\": \"Nueva descripción\",\n  \"is_public\": false\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/projects/{{project_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "projects",
                                "{{project_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Project",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/projects/{{project_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "projects",
                                "{{project_id}}"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}